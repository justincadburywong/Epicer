<div class="w-full max-w-2xl">
  <h1 class="font-bold text-3xl mb-6">New Recipe</h1>
  
  <% if @raw_ocr_text.present? %>
    <details class="mb-6 bg-gray-50 rounded-lg p-4">
      <summary class="cursor-pointer font-medium text-gray-700">View extracted text from scan</summary>
      <pre class="mt-3 text-sm text-gray-600 whitespace-pre-wrap font-mono bg-white p-3 rounded border max-h-64 overflow-y-auto"><%= @raw_ocr_text %></pre>
    </details>
  <% end %>
  
  <%= render "form", recipe: @recipe %>
</div>
