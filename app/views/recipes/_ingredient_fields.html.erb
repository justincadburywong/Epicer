<div class="ingredient-fields flex flex-wrap sm:flex-nowrap gap-2 items-center">
  <%= form.hidden_field :_destroy %>
  <%= form.hidden_field :position %>
  <div class="flex gap-2 w-full sm:w-auto">
    <%= form.number_field :quantity, step: "any", min: 0, placeholder: "Qty", class: "w-16 sm:w-20 rounded-lg border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 text-sm" %>
    <%= form.text_field :unit, placeholder: "Unit", class: "w-20 sm:w-24 rounded-lg border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 text-sm" %>
  </div>
  <%= form.text_field :name, placeholder: "Ingredient name", class: "flex-1 min-w-0 rounded-lg border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 text-sm" %>
  <button type="button" onclick="removeIngredient(this)" class="text-red-500 hover:text-red-700 text-xl shrink-0">&times;</button>
</div>
