<div class="container">
  <!-- Heading Row -->
  <div class="row">
      <div class="col-md-8">
          <img class="img-responsive img-rounded" src="http://placehold.it/900x350" alt="">
      </div>
      <!-- /.col-md-8 -->
      <div class="col-md-4">
          <h1><%= @recipe.name %></h1>
          <p><%= @recipe.description %></p>
          <a class="btn btn-primary btn-lg" href="#">Print</a>
      </div>
      <!-- /.col-md-4 -->
  </div>
  <!-- /.row -->

  <hr>

  <!-- Call to Action Well -->
  <% if @recipe.notes %>
    <div class="row">
        <div class="col-lg-12">
            <div class="well text-center">
                <%= @recipe.notes %>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  <% end %>


  <!-- Ingredients Row -->
  <div class="row">
      <div class="col-md-4">
          <h2>Ingredients:</h2>
          <span><%= @recipe.quantity1 %></span>   <span><%= @recipe.ingredient1 %></span>
      </div>
      <!-- /.col-md-8 -->
      <div class="col-md-8">
          <h2>Directions</h2>
          <span><%= @recipe.instruction1 %></span>
      </div>
      <!-- /.col-md-4 -->
  </div>
  <!-- /.row -->
  <div>
    <%= link_to 'Back', recipes_path %>
    <% if current_user %>
      <% if @recipe.user_id = current_user.id %>
      <%= link_to 'Edit', edit_recipe_path(@recipe) %>
      <%= link_to 'Delete', recipe_path(@recipe),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>

  </div>
  <!-- Footer -->
  <footer>
      <div class="row">
          <div class="col-lg-12">
              <p>Copyright &copy; Justin Cadbury Wong 2017</p>
          </div>
      </div>
  </footer>

</div>
