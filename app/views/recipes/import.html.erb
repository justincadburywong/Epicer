<div class="w-full max-w-xl">
  <h1 class="font-bold text-3xl mb-6">Import Recipe from URL</h1>

  <% if flash[:alert] %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <p class="text-red-700"><%= flash[:alert] %></p>
    </div>
  <% end %>

  <%= form_with url: import_recipes_path, method: :post, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :url, "Recipe URL", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.url_field :url, 
          class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500",
          placeholder: "https://www.allrecipes.com/recipe/...",
          required: true,
          autofocus: true %>
      <p class="mt-1 text-sm text-gray-500">
        Paste a URL from a recipe website. Works best with sites that use structured recipe data.
      </p>
    </div>

    <div class="flex gap-4">
      <%= form.submit "Import Recipe", class: "bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-2 px-6 rounded-lg cursor-pointer" %>
      <%= link_to "Cancel", recipes_path, class: "py-2 px-4 text-gray-600 hover:text-gray-800" %>
    </div>
  <% end %>

  <div class="mt-8 p-4 bg-gray-50 rounded-lg">
    <h2 class="font-semibold text-gray-700 mb-2">Supported Sites</h2>
    <p class="text-sm text-gray-600">
      Most major recipe sites work, including AllRecipes, Food Network, Serious Eats, 
      NYT Cooking, Bon App√©tit, and many others that use Schema.org recipe markup.
    </p>
  </div>
</div>
